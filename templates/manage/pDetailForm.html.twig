    <link rel="stylesheet" href="{{ asset('css/formManage.css') }}" />
{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
    <section class="form-manage-section">
            <div class="container">
                {# <form action="" class="form-edit"> #}
                {{ form_start(form, {'attr':{'class':'form-edit'}}) }}
                    <div class="mb-2">
                        <label for="product-id" class="form-label">Product id</label>
                        {# <input type="text" class="form-control" id="product-id" name="product-id"> #}
                        {{ form_widget(form.product, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="mb-2">
                        {# <select class="form-select" aria-label="Default select example">
                            <option selected>Size</option>
