                    <div class="mb-2">
                        <label for="stock" class="form-label">Stock</label>
                        {# <input type="text" class="form-control" id="price" name="stock"> #}
                        {{ form_widget(form.stock, {'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-check mb-2">
                        {# <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                          Available
                        </label> #}
                        {{ form_widget(form.status, {'attr':{'class':'form-control'}}) }}
                    </div>
                    {# <button class="btn btn-info confirm-btn">Confirm</button> #}
                    {{ form_widget(form.save, {'attr':{'class':'btn btn-info confirm-btn'}}) }}
                {# </form> #}
                {{ form_end(form) }}
            </div>
        </section>
{% include 'footer.html.twig' %}
