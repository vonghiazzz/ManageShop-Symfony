{% extends 'base.html.twig' %}

{% block title %}Account | Shopinist{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/personal.css') }}" />
{% endblock %}
{% block javascripts %}
    <link rel="stylesheet" href="{{ asset('Js/homepage.js') }}" />
{% endblock %}
{% block body %}
    {% include 'header.html.twig' %}
    <section class="personal-section mb-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-12">
                        <ul class="nav-sidebar">
                            <li class="active"><a href="#">account information</a></li>
                            <li><a href="{{path('app_history')}}">order history</a></li>
                            <li><a href="{{path('app_logout')}}">sign out</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-9 col-12">
                        <div class="heading">
                            <h1 class="title-account-info">
                                account info
                            </h1>
                        </div>
                        <div class="form-group-title">
                            <h1 >general info</h1>
                        </div>

                        {# <form action="" class="mt-3 form-info"> #}
                        {{ form_start(userForm, {'attr':{'class':'mt-3 form-info'}}) }}
                            <div class="mb-2">
                                <label for="first-name" class="form-label">First name</label>
                                {# <input type="text" class="form-control" id="first-name" name="first-name" value="Phong"> #}
                                {{ form_widget(userForm.first_name, {'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="mb-2">
                                <label for="last-name" class="form-label">Last name</label>
                                {# <input type="text" class="form-control" id="last-name" name="last-name" value="Nguyen"> #}
                                {{ form_widget(userForm.last_name, {'attr':{'class':'form-control'}}) }}
                            </div>
                            <div class="mb-2">
                                <label for="email" class="form-label">Email</label>
                                {# <input type="email" class="form-control" id="email" name="email" value="phongabc@gmail.com"> #}
                                {{ form_widget(userForm.email, {'attr':{'class':'form-control'}}) }}
                            </div>
                            {# <button type="submit" class="btn btn-info">update account</button> #}
                            {{ form_widget(userForm.save, {'attr': {'class':'btn btn-info user-update-btn'}}) }}
                        {{ form_end(userForm) }}
                        {# </form> #}
                        <div class="separate"></div>
                        {# <div class="change-password-box">
                            <p class="change-password-title">change password</p>
                            <form action="" class="form-change-password">
                                <div class="mb-2">
                                    <label for="email-address">Enter email Address</label>
                                    <input type="email" class="form-control" id="email-address" value="phongabc@gmail.com">
                                </div>
                                <button type="submit" class="btn btn-info">Change</button>
                            </form>
                        </div> #}
                    </div>
                </div>
            </div>
        </section>
    {% include 'footer.html.twig' %}
{% endblock %}